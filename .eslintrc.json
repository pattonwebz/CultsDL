{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "@typescript-eslint/indent": ["error", "tab", {"SwitchCase": 1}],
        "indent": ["error", "tab", {"SwitchCase": 1}],
        "no-tabs": "off",
        "semi": ["error", "always"],
        "@typescript-eslint/semi": ["error", "always"]
    }
}
